page {
  display: flex;
  flex-direction: column;
  height: 100%;
}
/* 直接设置swiper属性 */
.carid{
 width: 50%;
  height: 100%;
}
swiper {
  height: 500rpx;
}
swiper-item image {
  width: 100%;
  height: 100%;
}
.detail {
  display: flex;
  flex-direction: column;
  margin-top: 15rpx;
  margin-bottom: 0rpx;
}
.detail .title {
  font-size: 40rpx;
  margin: 10rpx;
  color: black;
  text-align: justify;
  font-family: '宋体'
}
.weui-btn{
  width:500rpx;
  height:100rpx;
  border-radius:5px;
  margin-top: 10rpx;
  background-color: rgb(219, 92, 18);
  color: rgb(156, 214, 21)
}
.detail .price {
  color: red;
  font-size: 40rpx;
  margin: 10rpx;
   font-family: '宋体'
}
.line_flag {
  width: 80rpx;
  height: 1rpx;
  display: inline-block;
  margin: 20rpx auto;
  background-color: gainsboro;
  text-align: center;
}
.line {
  width: 100%;
  height: 2rpx;
  display: inline-block;
  margin: 20rpx 0rpx;
  background-color: gainsboro;
  text-align: center;
}
.detail-nav {
  display: flex;
  flex-direction: row;
  align-items: center;
  float: left;
  background-color: #fff;
  position: fixed;
  bottom: 0;
  right: 0;
  z-index: 1;
  width: 100%;
  height: 100rpx;
}
.weui-label {
  width: 105px;
  word-wrap: break-word;
  word-break: break-all;
}

.button-green {
  background-color: #4caf50; /* Green */
   width: 100%;
}
.button-red {
  background-color: #f44336; /* 红色 */
  width: 50%;
}
.image_detail {
  width: 100%;
}
button {
  color: white;
  text-align: center;
  text-decoration: none;
  /* display: inline-block; */
  font-size: 30rpx;
  border-radius: 0rpx;

  line-height: 100rpx;
}
.detail-nav image {
  width: 70rpx;
  height: 50rpx;
  margin: 20rpx 40rpx;
}
.weui-btn-area{
 display: flex;
 flex-direction: row
}
.line_nav {
  width: 5rpx;
  height: 100%;
  background-color: gainsboro;
}
/* 占位 */
.temp {
  height: 100rpx;
}
text {
  display: block;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 30rpx;
  margin: 10rpx;
}
.text-remark {
  display: block;
  font-size: 25rpx;
  margin: 10rpx;
  font-family: '宋体'
}
.house{
  font-family: '宋体'
}
.ping{
